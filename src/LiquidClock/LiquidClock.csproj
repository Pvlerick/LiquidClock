<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.4</TargetFramework>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <TreatSpecificWarningsAsErrors />
  </PropertyGroup>

  <PropertyGroup>
    <Description>A library to ease testing async code in .NET</Description>
    <Authors>Philippe Vl√©rick</Authors>
    <RootNamespace>LiquidClock</RootNamespace>
    <PackageId>LiquidClock</PackageId>
    <PackageTags>async;unit testing</PackageTags>
    <PackageProjectUrl>https://github.com/Pvlerick/LiquidClock</PackageProjectUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/Pvlerick/LiquidClock/master/LICENSE</PackageLicenseUrl>
    <IncludeSource>True</IncludeSource>
    <IncludeSymbols>True</IncludeSymbols>
  </PropertyGroup>
  
</Project>
